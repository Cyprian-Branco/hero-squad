{{#partial "content"}}
    <br>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-3">
                <form action="/squad/new" method="POST">
                <p class="h4 text-center py-4">CREATE A SQUAD</p>


                <label for="name" class="grey-text font-weight-light">Squad Name</label>
                <input type="text" id="name" name="name" class="form-control">

                <br>

                <label for="cause" class="grey-text font-weight-light">Squad Cause</label>
                <input type="text" id="cause" name="cause" class="form-control">
                <br>

                <label for="max_size" class="grey-text font-weight-light">Maximum Size</label>
                <input type="number" id="max_size" name="max_size" class="form-control">
                <button class="btn btn-success" type="submit">SUBMIT</button>
                </form>
            </div>
        </div>
    </div>
{{/partial}}

