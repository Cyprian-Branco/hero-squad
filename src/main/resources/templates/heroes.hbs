{{#partial "content"}}
    <div class="comtainer">
        <h1 class="text-center">HEROES</h1>
        <h1 class="text-center">{{name}}</h1>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card mx-xl-5">
                <div class="card-body">
                    <h4 class="title">CREATE YOUR HERO</h4>
                    <form action="/squads/{{squad.id}}/heroes/new" method="post">
                        <label for="name">Hero name</label>
                        <input type="text" id="name" name="name" class="form-control form-control-sm">
                        <br>
                        <label for="age">Hero"s Age</label>
                        <input type="number" id="age" name="age" class="form-control form-control-sm">
                        <br>
                        <label for="specialPower">Special Power</label>
                        <input type="text" id="specialPower" name="specialPower" class="form-control form-control-sm">
                        <br>
                        <label for="weakness">Weakness</label>
                        <input type="text" id="weakness" name="weakness" class="form-control form-control-sm">
                        <div class="text-center mt-4 mb-2">
                            <button class="btn btn-outline-grey" type="submit">SUBMIT</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{{/partial}}

{{> layout.hbs}}