{{#partial "content"}}
    <div class="container">
        <h1 class="text-center">{{squad.name}}</h1>
        <div class="row">
            {{#if eachSquad}}
                {{#each eachSquad.squadMembers}}
                    <div class="col-md-6 text-center">
                        <div class="card card-image" style="background-image: url(/images/hero-background.jpg);">
                            <div class="text-white text-center d-flex align-items-center rgba-black-strong py-5 px-4">
                                <div>
                                    <h3 class="card-title pt-2"><strong>{{name}}</strong></h3>
                                    <p>Age : {{age}}</p>
                                    <p>Special Power : {{specialPower}}</p>
                                    <p>Weakness : {{weakness}}</p>
                                </div>
                            </div>

                        </div>
                    </div>
                {{/each}}
            {{else}}
                <div class="container">
                    <h1 class="text-center">No Heroes</h1>
                </div>
            {{/if}}
        </div>
    </div>
{{/partial}}
{{> layout.hbs}}